<%= form_with(model: atividade) do |form| %>
  <% if atividade.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(atividade.errors.count, "error") %> prohibited this atividade from being saved:</h2>

      <ul>
        <% atividade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :titulo, style: "display: block" %>
    <%= form.text_field :titulo %>
  </div>

  <div>
    <%= form.label :bimestre, style: "display: block" %>
    <%= form.number_field :bimestre %>
  </div>

  <div>
    <%= form.label :descricao, style: "display: block" %>
    <%= form.text_field :descricao %>
  </div>

  <div>
    <%= form.label :data, style: "display: block" %>
    <%= form.date_field :data %>
  </div>

  <div class="field">
    <%= form.label :disciplina_id %>
    <%= form.collection_select(:disciplina_id, Disciplina.all, :id, :nome,{:selected => @atividade.disciplina_id})%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
